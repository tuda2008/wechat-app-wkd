    height: 120px;
    display:flex;
}
.flex-item{
    width: 120px;
    height: 120px;
}
.flex-image {
  width: 98px;
  height: 98px;
  border-radius:49px;
  overflow: hidden;
}
.sub-title{
    width: 100%;
    background: url(/images/home/arrow-right.png) no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0; 
    font-size: 36rpx;
    color: #00CC99;
    border-bottom: 1px solid #eee;
    height: 60rpx;
    line-height: 60rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
  line-height: 60rpx;
}
.menu-item-title-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
.menu-item-title-item-text {
  font-size: 36rpx;
  color: #00CC99;
}
.menu-item-title-item-arrow {
  width: 48rpx;
  height: 48rpx;
  margin: 8rpx 0;
}

.detail-title{
    width: 100%;
    margin: 20rpx 0; 
    font-size: 36rpx;
    color: #666666;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    height: 40rpx;
    line-height: 40rpx;
    padding-bottom: 20rpx;
}
.detail-intro{
    width: 100%;
    margin: 20rpx 0; 
    font-size: 24rpx;
    flex-direction:row;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 100%;
    padding-bottom: 30rpx;
    border-bottom: 1px solid #eee;
}