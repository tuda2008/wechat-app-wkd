.swiper-item{
    height: 150px;
}
.flex-wrp{
    height: 120px;
    display:flex;
}
.flex-item{
    width: 120px;
    height: 120px;
}
.flex-image {
  width: 98px;
  height: 98px;
  border-radius:49px;
  overflow: hidden;
}

.product-title {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  padding: 50rpx 0 20rpx;
}
.product-intro {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  padding: 20rpx;
  background-color: rgba(104, 171, 194, .5);
  font-style: italic;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
  line-height: 60rpx;
}
.menu-item-title-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
.menu-item-title-item-text {
  font-size: 36rpx;
  color: #00CC99;
}
.menu-item-title-item-arrow {
  width: 48rpx;
  height: 48rpx;
  margin: 8rpx 0;
}

.partners{
    position: relative;
    padding-bottom: 10px;
}
.partners-item{
    margin-top: 10px;
    margin-bottom: 10px;
    background-color: rgba(104, 171, 194, .5);
    color: #fff;
    overflow: hidden;
    border-radius: 10px;
    cursor: pointer;
}
.partners-info{
    display: flex;
    padding: 20px;
    align-items: center;
    flex-direction: row;
}
.partners-info-name{
    flex: 1;
}
.partners-info-img{
    width: 30px;
    height: 30px;
}