<view class="page">
    <view class="page__bd">
        <view class="section section_gap swiper">
            <swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}"
                    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
                <block wx:for-items="{{background}}">
                    <swiper-item>
                        <view class="swiper-item">
                            <image src="{{item}}" />
                        </view>
                    </swiper-item>
                </block>
            </swiper>
        </view>

        <view class="product">
            <view class="menu">
                <view class="menu-title-item">
                    <text class="menu-title-item-text">产品中心</text>
                </view>
            </view>
            <view class="product-box">
                <block wx:for="{{products}}" wx:for-item="product">
                    <view class="product-detail" data-id="{{product.id}}" bindtap="goToProduct">
                        <image class="image" src="{{product.images[0]}}"></image>
                        <view class="title"><text>{{product.title}}</text></view>
                        <view class="intro"><text>{{product.intro}}</text></view>
                    </view>
                </block>
            </view>
        </view>

        <view>
            <button style="background-image:url('/images/home/phone.png');" class="call" bindtap="callPhone">财富热线</button>
        </view>
    </view>
</view>