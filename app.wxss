    color: #F76260;
}
.blue{
    color: #10AEFF;
}
.yellow{
    color: #FFBE00;
}
.gray{
    color: #C9C9C9;
}

.strong{
    font-weight: bold;
}

.bc_green{
    background-color: #09BB07;
}
.bc_red{
    background-color: #F76260;
}
.bc_blue{
    background-color: #10AEFF;
}
.bc_yellow{
    background-color: #FFBE00;
}
.bc_gray{
    background-color: #C9C9C9;
}

.tc{
    text-align: center;
}

.page input{
    padding: 10px 15px;
    background-color: #fff;
}
checkbox, radio{
    margin-right: 5px;
}

.btn-area{
    padding: 0 15px;
}
.btn-area button{
    margin-top: 10px;
    margin-bottom: 10px;
}

.page {
    min-height: 100%;
    flex: 1;
    background-color: #FBF9FE;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    overflow: hidden;
}
.page__hd{
    padding: 40px;
}
.page__title{
    display: block;
    font-size: 20px;
}
.page__desc{
    margin-top: 5px;
    font-size: 14px;
    color: #888888;
}

.section{
    margin-bottom: 40px;
}
.section_gap{
    padding: 0 15px;
}
.section__title{
    margin-bottom: 8px;
    padding-left: 15px;
    padding-right: 15px;
}
.section_gap .section__title{
    padding-left: 0;
    padding-right: 0;
}
.section__ctn{

}

.call{
  width: 26vw;
  height: 11vw;
  display: flex;
  flex-direction: row;
  position: fixed;
  right: 36rpx;
  bottom: 80rpx;
  font-size: 32rpx;
  color: #CC3300;
  background-size: 48rpx 80rpx;
  background-repeat:no-repeat;
}

.product .menu {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  margin: 20rpx 40rpx;
  border-bottom: 1px solid #eee;
  line-height: 60rpx;
}
.product .menu-title-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
.product .menu-title-item-text {
  font-size: 36rpx;
  color: #00CC99;
}
.product .menu-title-item-arrow {
  width: 48rpx;
  height: 48rpx;
  margin: 8rpx 0;
}
.product-box{
    padding: 0 40rpx;
}
.product-box .product-detail{
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin: 0 20rpx 20rpx 0;
    border-radius: 20px;
    text-align: center;
    background: #f5f6f5;
}
.product-box .product-detail:nth-child(2n){
    margin-right: 0;
}
.product-box .product-detail image{
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx 0 10rpx;
}
.product-box .product-detail .image{
    border-radius: 20px;
}
.product-box .product-detail .title{
    font-size: 32rpx;
    margin: 0 30rpx 0 30rpx;
    border-radius: 10px;
    color: #fff;
    background-color: rgba(104, 171, 194, .5);
}
.product-box .product-detail .intro{
    font-size: 24rpx;
    font-style: italic;
    color: #ccc;
}